<!doctype html>
<html>
  <head>
    <title>Web-book</title>
    <link rel="stylesheet" href="/style.css">

  </head>
  <body>

    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <form action="/tags" method="POST" autocomplete="off">
        <!-- <input type="text" placeholder="Search.." list="tags" name="dropdown" autocomplete="off"> -->
        <select id="tags" name="dropdown">
          <% @tag_instances.each do |tag| %>
          <option  value="<%= tag.id %>"><%= tag.content %></option>
          <% end %>
        </select>
        <input type="submit" value="submit" class="submitButton">
      </form>
    </div>
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
