<!doctype html>
<html>
  <head>
    <title>Web-book</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <% if logged_in?%>
      <div class="topnav">
        <a class="active" href="/websites">Home</a>
        <form action="/websites" method="GET" autocomplete="off">
          <select id="tags" name="dropdown_tag">
            <% @tags.each do |tag| %>
            <option  value="<%= tag.id %>"><%= tag.content %></option>
            <% end %>
          </select>
          <input id="tags" type="submit" value="submit" class="submitButton">
        </form>
      </div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
