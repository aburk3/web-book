<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/websites">Home</a>
      <form action="/tags" method="POST" autocomplete="off">
        <select id="tags" name="dropdown">
          <% @tag_instances.each do |tag| %>
          <option  value="<%= tag.id %>"><%= tag.content %></option>
          <% end %>
        </select>
        <input id="tags" type="submit" value="submit" class="submitButton">
      </form>
    </div>
    <h1><u>Your Tags</u></h1>
    <br>
    <div>
      <% @uniq_tags %>
    </div>
  </body>
</html>
